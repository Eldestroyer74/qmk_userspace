/* Combo macro format:
 * COMB(name, keycode_shortcut, combo_sequence...)
 * SUBS(name, "string to send", combo_sequence...)
 * ACTN(name, actionfunction(), combo_sequence...)
 *
 * http://combos.gboards.ca/docs/combos/
 */

// Home row mod tap keys
#define HM_A SFT_T(KC_A)
#define HM_S ALT_T(KC_S)
#define HM_D CTL_T(KC_D)
#define HM_F GUI_T(KC_F)
#define HM_J GUI_T(KC_J)
#define HM_K CTL_T(KC_K)
#define HM_L ALT_T(KC_L)
#define HM_SCLN SFT_T(KC_SCLN)

// Right symbols
COMB(KC_LPRN, 	KC_LPRN, KC_U, KC_I)
COMB(KC_RPRN, 	KC_RPRN, KC_I, KC_O)
COMB(KC_LCBR, 	KC_LCBR, HM_J, HM_K)
COMB(KC_RCBR, 	KC_RCBR, HM_K, HM_L)
COMB(KC_LBRC,	KC_LBRC, M_TH, COMM_TH)
COMB(KC_RBRC, 	KC_RBRC, COMM_TH, DOT_TH)

COMB(KC_MINS, 	KC_MINS, KC_U, HM_J)
COMB(KC_EQL, 	KC_EQL,  KC_I, HM_K)
COMB(KC_BSLS, 	KC_BSLS, KC_O, HM_L)
COMB(KC_UNDS, 	KC_UNDS, HM_J, M_TH)
COMB(KC_PLUS, 	KC_PLUS, HM_K, COMM_TH)
COMB(KC_PIPE,	KC_PIPE, HM_L, DOT_TH)

COMB(KC_TILD, 	KC_TILD, KC_P, HM_SCLN)
COMB(KC_GRV, 	KC_GRV,  HM_SCLN, SLSH_TH)

// Left symbols
COMB(KC_CIRC, 	KC_CIRC, W_TH, HM_S)
COMB(KC_AMPR, 	KC_AMPR, KC_E, HM_D)
COMB(KC_ASTR, 	KC_ASTR, KC_R, HM_F)

COMB(KC_EXLM, 	KC_EXLM, HM_A, KC_Z)
COMB(KC_AT, 	KC_AT,   HM_S, KC_X)
COMB(KC_HASH, 	KC_HASH, HM_D, KC_C)
COMB(KC_DLR, 	KC_DLR,  HM_F, KC_V)
COMB(KC_PERC, 	KC_PERC, KC_G, KC_B)

// Volume control
COMB(KC_VOLU,	KC_VOLU, HM_SCLN, KC_QUOT)
COMB(KC_VOLD, 	KC_VOLD, SLSH_TH, KC_ENT)

